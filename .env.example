# ==================================
# IntelliFlow Environment Configuration
# ==================================

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/intelliflow
POSTGRES_DB=intelliflow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379

# Descope Authentication
DESCOPE_PROJECT_ID=your_descope_project_id
DESCOPE_MANAGEMENT_KEY=your_descope_management_key
DESCOPE_BASE_URL=https://api.descope.com

# Agent A - Email Summarizer
AGENT_A_INBOUND_APP_ID=agent-a-summarizer
AGENT_A_PORT=8001

# Agent B - Calendar Manager
AGENT_B_INBOUND_APP_ID=agent-b-calendar
AGENT_B_PORT=8002

# API Gateway
API_GATEWAY_PORT=3001
AGENT_A_URL=http://localhost:8001
AGENT_B_URL=http://localhost:8002

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_DESCOPE_PROJECT_ID=your_descope_project_id

# Google Gemini API (FREE - Get from https://aistudio.google.com/app/apikey)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_herey
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google APIs (Gmail & Calendar)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# Logging
LOG_LEVEL=INFO
DEBUG=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT
JWT_ALGORITHM=RS256

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
